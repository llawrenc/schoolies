  </div>
  </div>
  <div class="row">
    <div class="form-group col-md-8">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="row">
  <div class="form-group col-md-4">
    <%= f.label :category %><br>
